{% extends 'base.html.twig' %}
{% block title %}Produkty{% endblock %}
{% block body %}
    <main>
        <section class="sort">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </section>
        <section class="products">
            {% for product in products %}
                <article class="product">
                    <a href="{{ path('product_get', { id: product.id }) }}">
                        <img src="product.jpg" alt="{{ product.name }}">
                        <h2>{{ product.name }}</h2>
                    </a>
                    <a href="{{ path('category_get', { category: product.category }) }}">
                        <p>{{ product.category }}</p>
                    </a>
                    <span class="price">{{ product.sellingPrice/100 }} PLN</span>
                    <button class="button_basket">Dodaj do koszyka</button>
                </article>
            {% endfor %}
        </section>
    </main>
{% endblock %}